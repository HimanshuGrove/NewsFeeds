<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_16"
        android:layout_marginRight="@dimen/value_16"
        android:layout_marginBottom="@dimen/value_8">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_200"
            android:id="@+id/ivNews"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivNews"
            android:layout_marginTop="@dimen/value_4"
            android:textSize="@dimen/textsize_16"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/tvNewsTitle"/>
    </RelativeLayout>

</layout>